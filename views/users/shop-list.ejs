<!-- new arrival area starts -->
<div class="shop-grid-s pt-120">
<div class="container">
  <div class="row">
    <div class="col-xl-3 col-lg-4 col-md-12  ">
      <div class="sidebar-widget ">
        <div class="categorie ">
          <h4>All Categories</h4>
          <ul class="categories-list pt-10 pl-20 pb-65">
            <li><a href="/shop-list">All Items</a></li>
            <li><a href="/shop-list?category=Men">Men</a></li>
            <li><a href="/shop-list?category=Women">Women</a></li>
            <li><a href="/shop-list?category=Unisex">Unisex</a></li>
           
          </ul>
        </div>
      </div>
       
      
       <div class="product-on-sale pt-55">
         <div class="container pl-0 pr-0">
          <div class="row">
         <div class="col-xl-12">
          </div>  
        </div>   
      </div>  
    </div> 
    </div> 
    <div class="col-xl-9 col-lg-8 col-md-12">
      <div class="new-arrival shop-grid pt-80 pt-lg-0">
        <div class="container pl-0 pr-0">
          <div class="arrival-product new-arrival-2">
            <div class="row">
              <% products.forEach(product => { %>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6 grid-item">
                  <div class="arrival-items mb-55">
                    <div class="arrival-img">
                      <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                    </div>
                    <div class="arrival-details">
                      <h5><a href="/shop-details/<%= encodeURIComponent(product._id) %>"><%= product.name %></a></h5>
                      <!-- Other product details... -->
                      <div class="price">
                        <span>₹<%= product.price %></span>
                      </div>
                      <div class="buy-info">
                        <% if (isUserLoggedIn===true) { %>
                          <a class="slider-btn add-btn float-left position-relative add-to-cart-btn" href="/add-to-cart/<%= encodeURIComponent(product._id) %>">Add To Cart</a>
                        <% } else { %>
                          <a href="/login" class="slider-btn add-btn float-left position-relative " >Add To Cart</a>
                        <% } %>
                        <ul class="wishlist text-right">
                          <li><a href="my_wishlist.html"><i class="lar la-heart"></i></a></li>
                          <li><button class="popbtn"><i class="fas fa-search-plus"></i></button></li>
                        </ul>
                      </div>
                      
                      <!-- Modal -->
                      <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Product added to cart successfully.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
 
 

<!-- new arrival area ends -->
<div class="pagination-box">
  <% if (currentPage > 1) { %>
    <a href="/shop-list?page=<%= currentPage - 1 %>&limit=<%= limit %>&category=<%= category %>&sort=<%= selectedSort %>" class="pagination-link">&lt;</a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <a href="/shop-list?page=<%= i %>&limit=<%= limit %>&category=<%= category %>&sort=<%= selectedSort %>" class="pagination-link <% if (currentPage === i) { %>active<% } %>"><%= i %></a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="/shop-list?page=<%= currentPage + 1 %>&limit=<%= limit %>&category=<%= category %>&sort=<%= selectedSort %>" class="pagination-link">&gt;</a>
  <% } %>
</div>
