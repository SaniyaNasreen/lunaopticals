<%- include('../layouts/header.ejs') %>
<header>
  <div class="header-1">
    <div class="container">
      <div class="row align-items-center">
        <div
          class="col-xl-2 col-lg-2 col-md-6 col-sm-6 col-7 order-md-2 order-lg-1"
        >
          <div class="logo3 text-md-center text-lg-left">
            <a href="/">
              <div
                class="logo3"
                style="background-image: url('/public/images\ \(1\).jpg')"
              ></div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container-fluid">
  <div class="logoimage">
    <img src="/images (1).jpg" alt="" />
    <div class="box-forget">
      <h1
        class="headforget1"
        style="color: orangered; position: relative; right: 20px"
      >
        ForgetPassword
      </h1>

      <form
        action=""
        class="forgetpassword needs-validation"
        id="emailValidate"
        method="post"
        novalidate
      >
        <label
          for="validationCustomUsername"
          class="form-label"
          style="color: white; position: relative; left: 100px; top: 20px"
          >Password</label
        >
        <input
          type="password"
          class="formforget1 form-control"
          id="validationCustomUsername"
          aria-describedby="inputGroupPrepend"
          style="position: relative; bottom: 30px; font-size: 15px"
          name="password"
          required
          placeholder="Enter password"
        />
        <div
          class="invalid-feedback"
          style="position: relative; bottom: 20px; left: 100px"
        >
          <!-- prettier-ignore -->
          Password is required
        </div>
        <input type="hidden" name="user_id" value="<%= user_id %>" />
        <br /><br />

        <input
          type="submit"
          class="formforget2"
          value="Reset Password"
          style="
            color: white;
            background-color: rgb(197, 95, 22);
            width: 300px;
            position: relative;
            right: 50px;
            bottom: 50px;
            padding-right: 130px;
            font-size: 15px;
          "
        />
      </form>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
