<div class="wishlist-area shopping_cart shop-list pt-105">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">   
        <div class="cart-table table-responsive">
          <% if (isUserLoggedIn) { %>
            <% console.log('User:', user); %>
            <% console.log('Is User Logged In:', isUserLoggedIn); %>
            <% if (user && user.cart && user.cart.length > 0) { %>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col"><span>PRODUCT</span></th>
                    <th scope="col"><span>UNIT PRICE</span></th>
                    <th scope="col"><span>QUANTITY</span></th>
                    <th scope="col"><span>TOTAL</span></th>
                    <th scope="col"><span>REMOVE</span></th>
                  </tr>
                </thead>
                <tbody>
                  <% user.cart.forEach(item => { %>
                    <tr>
                      <td>
                        <div class="d-flex">
                          <div class="cart-img">
                            <img src="<%= item.product.images[0] %>" alt="<%= item.product.name %>">
                          </div>
                          <div class="product-name mt-auto mb-auto ml-30">
                            <p><%= item.product.name %></p>
                          </div>
                        </div>
                      </td>
                      <td>
                        $<%= item.product.price %>
                      </td>
                      <td>
                        <div class="cart-button">
                          <form action="/update-cart" method="POST" class="quantity-form">
                            <input type="hidden" name="product_id" value="<%= item.product._id %>">
                            <div class="quantity-controls">
                              <button type="submit" name="updateQuantity" value="decrease">-</button>
                              <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="100">
                              <button type="submit" name="updateQuantity" value="increase">+</button>
                            </div>
                          </form>
                        </div>
                      </td>
                      <td>
                        $<%= item.quantity * item.product.price %>
                      </td>
                      <td>
                        <button class="remove-item-btn" data-product-id="<%= item.product._id %>">
                          <a href="/remove-from-cart/<%= item.product._id %>">Remove</a>
                        </button>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            <% } else { %>
                <% if (emptyCart) { %>
                    <p>Your cart is empty.</p>
                <% } else { %>
                    <p>No user or cart found.</p>
                <% } %>
                <% } %>
          <% } else { %>
            <p>Please log in to view your cart.</p>
            
          <% } %>

         
        </div>
       
      </div>
    </div>
  </div>
  <div class="container pt-50">
