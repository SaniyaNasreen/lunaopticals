<%- include('../layouts/header.ejs') %>
<header>
  <div class="header-1">
    <div class="container">
      <div class="row align-items-center">
        <div
          class="col-xl-2 col-lg-2 col-md-6 col-sm-6 col-7 order-md-2 order-lg-1"
        >
          <div class="logo3 text-md-center text-lg-left">
            <a href="/">
              <div
                class="logo3"
                style="background-image: url('/public/images\ \(1\).jpg')"
              ></div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- header area ends -->

<div class="container-fluid0">
  <div class="box-login">
    <h1 class="head1-login">Login</h1>

    <form
      action="/login"
      method="post"
      class="form1-login needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label
          for="validationCustomUsername"
          class="form-label"
          style="color: white"
          >Email</label
        >
        <input
          type="email"
          class="form-control1-login form-control <%- (typeof errorWith != 'undefined' && errorWith ==='USER') ? 'is-invalid' : '' %>"
          id="validationCustomUsername"
          aria-describedby="inputGroupPrepend"
          required
          name="email"
          style="
            border-radius: 10px;
            width: 400px;
            height: 40px;
            border-style: hidden;
            color: white;
            background-color: rgb(50, 50, 50);
          "
        />
        <div class="invalid-feedback">
          <!-- prettier-ignore -->
          <%- (typeof errorWith != 'undefined') ? message : "Email is required" %>
        </div>
      </div>
      <div class="mb-3">
        <label for="validationCustom03" class="form-label" style="color: white"
          >Password</label
        >
        <input
          type="password"
          class="form-control1-login form-control <%- (typeof errorWith != 'undefined' && errorWith ==='PASSWORD') ? 'is-invalid' : '' %>"
          id="validationCustom03"
          required
          name="password"
          style="
            border-radius: 10px;
            width: 400px;
            height: 40px;
            border-style: hidden;
            color: white;
            background-color: rgb(50, 50, 50);
          "
        />
        <!-- prettier-ignore -->
        <div class="invalid-feedback">
          <%- (typeof errorWith != 'undefined') ? message : "Password is required" %>
        </div>
      </div>
      <h4 class="sub1-login">
        Forgot your password?<a href="/forget-password">Click here</a>
      </h4>
      <div class="mb-3">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="invalidCheck"
            checked
            required
          />
          <label class="form-check-label" for="invalidCheck">
            Agree to terms and conditions
          </label>
          <div class="invalid-feedback">You must agree before submitting.</div>
        </div>
      </div>
      <div class="mb-3">
        <input type="submit" class="form-control2-login" value="Login" /><br />
      </div>
    </form>
    <form action="/forgotPassword" method="get">
      <input type="submit" class="form-control3-login" value="login with otp" />
    </form>
    <form action="/register" class="form2-login" method="get">
      <input type="submit" class="form-control4-login" value="Sign-Up" />
    </form>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
