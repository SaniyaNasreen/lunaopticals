<%- include('../users/layouts/navbar.ejs') %>

<div class="page-title-area pt-150 pb-55">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="page-titel-detalis">
          <div class="section-title">
            <h2>User Profile</h2>
          </div>
          <div class="page-bc">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
               
                <li
                  class="breadcrumb-item position-relative active"
                  aria-current="page"
                >
                  <a href="/edituser">profile</a>
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="shop-grid-s pt-120" style="background-color: white; height:auto">
    <div class="container">
      <div class="row">
        <div class="col-xl-12">
          <div class="d-flex">
            <div class="col-xl-3 col-lg-4 col-md-12">
              <div class="sidebar">
                <!-- Include sidebar content -->
                <%- include('../users/layouts/sidebar.ejs') %>
              </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-12">
              <div class="useraddress" style="width: 640px; height: auto; position: relative; left: 30px;">
                <div style="margin-bottom: 20px;">
                  <div style="  padding: 10px; width: 1000px;">
                    <% if (orders && orders.length > 0) { %>
                      <% orders.forEach(order => { %>
                        <% order.purchasedItems.forEach(purchasedItem => { %>
                          <div style="border: 1px solid #ccc; background-color: white; margin-bottom: 10px; padding: 10px; font-size: larger; font-weight: bold;">
                            <p style="font-weight: bold; color: black; font-size:14px;">  <%= purchasedItem.product.name %></p>
                            <% if (order.status === 'cancelled') { %>
                              <button style="float: right; position: relative; bottom: 40px; font-weight: 500; color: white; font-size: 13px; background-color: red; border-style: none;">
                                <%= order.status %>
                              </button>
                            <% } else { %>
                              <button style="float: right; position: relative; bottom: 40px; font-weight: 500; color: rgb(250, 249, 249); font-size: 13px; background-color: blue; border-style: none;">
                                <%= order.status %>
                              </button>
                            <% } %>
                            <p style="float: right; position: relative; bottom: 40px; font-weight: 500; right: 300px; color: black; font-size: 13px;">â‚¹ <%= purchasedItem.price %></p>
                            <p style="float:right; font-weight: bold; color: black; font-size:14px; position: relative; bottom: 40px; right: 100px;">  <%= order.date instanceof Date ? order.date.toDateString() : ''%></p>
                            <!-- Add other order details as needed -->
                            <a href="/users/orderInfo/<%= encodeURIComponent(order._id) %>" class="view-order-btn" style="color:orangered; font-size:medium;">View Details</a>
                          </div>
                        <% }) %>
                      <% }) %>
                    <% } else { %>
                      <p>No orders found</p>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../users/layouts/footer.ejs') %>
        </div>
      </div>
    </div>
  </div>
   
   

 
  
