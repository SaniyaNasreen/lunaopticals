<script>
  function validatePrice(event) {
    const priceInput = event.target.querySelector('[name="price"]');
    const price = parseFloat(priceInput.value);

    if (price <= 0 || isNaN(price)) {
      event.preventDefault();  
      const priceErrorMessage = event.target.querySelector('.price-error-message');
      priceErrorMessage.innerText = 'Price must be a valid number greater than zero.';
      priceErrorMessage.style.display = 'block';  
    }
  }

  document.getElementById('addProductForm').addEventListener('submit', validatePrice);
  document.getElementById('editProductForm').addEventListener('submit', validatePrice);
</script>

