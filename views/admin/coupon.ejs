<!-- prettier-ignore -->

<div class="nk-app-root">
    <div class="nk-main">
<%- include('../admin/layouts/sidebar.ejs') %>

 <%-include('../admin/layouts/navbar.ejs') %>

 <div class="nk-content">
    <div class="container-fluid"  style="  width: 100%;
    max-width: 1570px;  
    box-sizing: border-box;
    padding-left: 300px; padding-top: 60px; ">
      <div class="nk-content-inner">
        <div class="nk-content-body">
          <div class="nk-block-head nk-block-head-sm">
            <div class="nk-block-between">
              <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">Coupons</h3>
              </div> 
              <li class="nk-block-tools-opt">
                <a
                  href="#"
                  data-target="addProduct"
                  class="toggle btn btn-icon btn-primary d-md-none"
                  ><em class="icon ni ni-plus"></em></a
                ><a href="#" data-bs-toggle="modal" data-bs-target="#addCouponModal" class="toggle btn btn-primary d-none d-md-inline-flex">
                  <em class="icon ni ni-plus"></em>
                  <span>Add Coupon</span>
              </a>


              <div class="modal fade" id="addCouponModal" tabindex="-1" aria-labelledby="addCouponModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="adCouponModalLabel">Add Coupon</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/admin/coupon/add-coupon" id="addProductForm" class="form1-addp needs-validation" method="post"  novalidate>
                                <div class="mb-3">
                                  <label for="name" class="form-label" style="color: rgb(158, 154, 154)">Name</label>
                                  <input type="text" class="form-control1-addp form-control" name="name" required>
                                  <div class="invalid-feedback">Name is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="code" class="form-label" style="color: rgb(158, 154, 154)">Code</label>
                                  <input type="text" class="form-control1-addp form-control" name="code" required>
                                  <div class="invalid-feedback">Code is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="discount" class="form-label" style="color: rgb(158, 154, 154)">Discount</label>
                                  <input type="number" class="form-control1-addp form-control" name="discount" min="0" max="100" required>
                                  <div class="invalid-feedback">Discount is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="status" class="form-label" style="color: rgb(109, 103, 103);">Status</label>
                                  <select class="form-control1-editp form-control" name="status" style="width: 430px;" required>
                                    <option value="" disabled selected>Select status</option>
                                    <option value="Active">Active</option>
                                    <option value="In Active">In Active</option>
                                  </select>
                                  <div class="invalid-feedback">Status is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="validity" class="form-label" style="color: rgb(158, 154, 154)">Validity</label>
                                  <input type="date" class="form-control1-addp form-control" name="validity" required>
                                  <div class="invalid-feedback">Validity is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="category" class="form-label" style="color: rgb(109, 103, 103);">Category</label>
                                  <select class="form-control1-editp form-control" name="category" style="width: 430px;" required>
                                    <option value="" disabled selected>Select a Category</option>
                                    <% categories.forEach(category => { %>
                                      <option value="<%= category._id %>"><%= category.name %></option>
                                    <% }); %>
                                  </select>
                                  <div class="invalid-feedback">Category is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="minAmount" class="form-label" style="color: rgb(158, 154, 154)">Minimum Amount</label>
                                  <input type="number" class="form-control1-addp form-control" name="minAmount" required>
                                  <div class="invalid-feedback">Minimum Amount is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <label for="maxAmount" class="form-label" style="color: rgb(158, 154, 154)">Maximum Amount</label>
                                  <input type="number" class="form-control1-addp form-control" name="maxAmount" required>
                                  <div class="invalid-feedback">Maximum Amount is required.</div>
                                </div>
                              
                                <div class="mb-3">
                                  <input type="submit" class="form-control4-addp" value="Add product" style="width: 430px; position: relative; right: 80px; margin-top: 15px; border-radius: 10px; color: white; height: 40px; font-weight: 500; background-color: rgb(33, 78, 225); border-style: hidden;">
                                </div>
                              </form>
                        </div>
                    </div>
                </div>
            </div>
              </li>
            </div>
          </div>
          <div class="nk-block">
            <div class="nk-tb-list is-separate mb-3">
              <div class="nk-tb-item nk-tb-head">
                <div class="nk-tb-col nk-tb-col-check">
                   
                </div>
                <div class="nk-tb-col tb-col-sm"><span>Name</span></div>
                <div class="nk-tb-col"><span>Discount</span></div>
                <div class="nk-tb-col"><span>Status</span></div>
                <div class="nk-tb-col"><span>Category</span></div>
                <div class="nk-tb-col"><span>Minimum amount</span></div>
                <div class="nk-tb-col"><span>Maximum amount</span></div>
                <div class="nk-tb-col nk-tb-col-tools">
                  <ul class="nk-tb-actions gx-1 my-n1"> 
                  </ul>
                </div> 
              </div>    
              <% coupons.forEach(coupon => { %>
                <div class="nk-tb-item">
                  <div class="nk-tb-col tb-col-sm">
                  </div>
                  <div class="nk-tb-col tb-col-sm">
                    <span class="tb-product">
                      <span class="title"><%= coupon.name %></span>
                    </span>
                  </div>
                  <div class="nk-tb-col tb-col-sm">
                    
                      <span class="title"><%= coupon.discount %></span>
                     
                  </div> 
                 
                  <div class="nk-tb-col tb-col-md">
                   
                   <button style=" border-style: none; color: white; font-size: 12px;  "><span class="title btn btn-danger;"><%= coupon.status %></span></button> 
                  </div>
                  <div class="nk-tb-col tb-col-sm">
                    
                    <span class="title"><%= coupon.category.name %></span>
                   
                </div> 
                  <div class="nk-tb-col tb-col-md">
                    <span class="title"><%= coupon.minAmount %></span>

                  </div>
                  <div class="nk-tb-col tb-col-md">
                    <span class="title"><%= coupon.maxAmount %></span>
                  </div>
                        <div class="nk-tb-col nk-tb-col-tools">
                          <ul class="nk-tb-actions gx-1 my-n1">
                            <li class="me-n1">
                              <div class="nk-tb-col tb-col-md">
                                <a href="#" data-bs-toggle="modal" data-bs-target="#editCouponModal<%=coupon._id%>" class="toggle btn btn-danger d-none d-md-inline-flex">
                              
                                  <span>Edit Product</span>
                              </a>
                              </div>
                              <div class="modal fade" id="editCouponModal<%=coupon._id%>" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="addProductModalLabel">edit Product</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                          <form action="/admin/coupon/edit-coupon/<%= coupon._id %>" id="editCouponForm" class="form1-editp needs-validation" method="post" enctype="multipart/form-data" novalidate>
                                             
                                            <div class="mb-3">
                                              <label for="name" class="form-label" style="color: rgb(109, 103, 103);">Name</label>
                                                <input type="text" class="form-control1-editp form-control" name="name" placeholder="Enter name" value="<%= coupon.name %>" required>
                                                <div class="invalid-feedback">
                                                    Name is required.
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                              <label for="name" class="form-label" style="color: rgb(109, 103, 103);">Description</label>
                                                <input type="number" class="form-control1-editp form-control" name="discount" placeholder="Enter description" value="<%=coupon.discount %>" required>
                                                <div class="invalid-feedback">
                                                    Description is required.
                                                </div>
                                            </div>
                                            
                                            <div class="mb-3">
                                              <label for="name" class="form-label" style="color: rgb(109, 103, 103);">RichDescription</label>
                                              <select class="form-control1-editp form-control" name="status"  required>
                                                <option value="<%= coupon.status %>" disabled selected>Select status</option>
                                                <option value="Active">Active</option>
                                                <option value="In Active">In Active</option>
                                              </select>
                                              <div class="invalid-feedback">Status is required.</div>
                                            </div>
                                            <div class="mb-3">
                                              <label for="name" class="form-label" style="color: rgb(109, 103, 103);">Category</label>
                                                <select class="form-control1-editp form-control" name="category" required>
                                                    <% categories.forEach(category => { %>
                                                    <option value="<%= category._id %>">
                                                        <%= category.name %>
                                                    </option>
                                                    <% }); %>
                                                </select>
                                                <div class="invalid-feedback">
                                                    Category is required.
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                              <label for="name" class="form-label" style="color: rgb(109, 103, 103);">Price</label>
                                                <input type="number" class="form-control1-editp form-control" name="minAmount" placeholder="Enter price" value="<%= coupon.minAmount %>" required>
                                                <span class="price-error-message" style="display: none; color: red; font-size: small;"></span>
                                                <div class="invalid-feedback">
                                                    Price is required.
                                                </div>
                                            </div>
                                          
                                            <div class="mb-3">
                                              <label for="name" class="form-label" style="color: rgb(109, 103, 103);">Stock</label>
                                                <input type="number" class="form-control1-editp form-control" name="maxAmount" placeholder="Enter stock" value="<%= coupon.maxAmount %>" required>
                                                <div class="invalid-feedback">
                                                    Stock count is required.
                                                </div>
                                            </div>
                                            <input type="hidden" name="id" value="<%= coupon._id %>">
                                            <input type="hidden" name="_method" value="PUT">
                                            <input type="hidden" name="_delete" value="true">
                                        
                                            <div class="mb-3">
                                                <input type="submit" class="form-control4-editp" value="Update product" style="width: 550px; position: relative;  margin-top: 15px; border-radius: 10px; color: white; height: 40px; font-weight: 500; background-color: rgb(22, 92, 197); border-style: hidden;">
                                            </div>
                                        </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </li>
                          </ul>
                        </div>
                      </div> 
                    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to <span id="actionText"></span> this user?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirm</button>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
        </div>
      </div>
    </div>
</div>
</div>
</div>
</div>  


 <%-include('../admin/layouts/footer.ejs') %>
        </div>
      </div>
