<%- include('../layouts/header.ejs') %>

<div class="container-fluid6">
    <div class="logo-image"><img src="/images (1).jpg" alt=""></div>
<div class="box-editc">
<h1 class="head1-editc">EditCategory</h1>

<form action="/admin/edit-category" class="form1-editc" method="POST"  enctype="multipart/form-data">

    <input type="file" class="form-control2-editc" name="image" value="<%= category.image %>" required>
    <br><br>
    <select name="category" class="form-control1-addp" required>
        <option value="" disabled selected>Select a category</option>
        <% categories.forEach(category => { %>
            <option value="<%= category.name %>"><%= category.name %></option>
        <% }); %>
    </select>
    <br><br>
    <input type="hidden" name="id" value="<%= category._id %>" >
    <input type="submit" class="form-control4-editc" value="Update Category">

</form>

<a href="/admin/categories" class="form-control4-editc">Go To Categories</a>
</div>
</div>
<%- include('../layouts/footer.ejs') %>